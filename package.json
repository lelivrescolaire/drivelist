{
  "name": "@lls/drivelist",
  "version": "9.0.11",
  "private": false,
  "description": "List all connected drives in your computer, in all major operating systems",
  "main": "js/index.js",
  "homepage": "https://github.com/lelivrescolaire/drivelist",
  "gypfile": true,
  "repository": "https://github.com/lelivrescolaire/drivelist.git",
  "keywords": [
    "disk",
    "cross",
    "platform",
    "physical",
    "drive",
    "list"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts -R spec",
    "lint": "npm run lint-cpp",
    "lint-cpp": "cpplint --recursive src",
    "readme": "jsdoc2md --template doc/README.hbs js/index.js > README.md",
    "configure": "node-gyp configure",
    "build": "node-gyp rebuild",
    "build-ts": "tsc",
    "rebuild": "node-gyp rebuild",
    "install": "prebuild-install || node-gyp rebuild",
    "prebuild-release": "prebuild -r electron -t 5.0.0 --strip",
    "prepublishOnly": "npm run build-ts && npm run readme"
  },
  "author": "Maximilien DERRIER <max.derrier@lelivrescolaire.fr>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "binary": {
    "module_name": "drivelist",
    "host": "https://github.com/lelivrescolaire/drivelist/releases/download/",
    "remote_path": "{version}",
    "package_name": "drivelist-v{version}-{runtime}-v{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./build/Release",
    "pkg_path": "."
  },
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/chai": "4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/mz": "0.0.32",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "eslint": "6.4.0",
    "jsdoc-to-markdown": "5.0.1",
    "mocha": "^6.0.0",
    "prebuild": "^9.1.0",
    "sinon": "7.4.2",
    "ts-node": "8.4.1",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "debug": "^4.1.1",
    "mz": "^2.7.0",
    "nan": "^2.10.0",
    "prebuild-install": "5.3.2"
  }
}
