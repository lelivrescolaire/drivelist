{
  "name": "@lls/drivelist",
  "version": "9.0.18",
  "private": false,
  "description": "List all connected drives in your computer, in all major operating systems",
  "main": "js/index.js",
  "homepage": "https://github.com/lelivrescolaire/drivelist",
  "gypfile": true,
  "repository": "https://github.com/lelivrescolaire/drivelist.git",
  "keywords": [
    "disk",
    "cross",
    "platform",
    "physical",
    "drive",
    "list"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts -R spec",
    "lint": "npm run lint-cpp",
    "lint-cpp": "cpplint --recursive src",
    "readme": "jsdoc2md --template doc/README.hbs js/index.js > README.md",
    "configure": "node-gyp configure",
    "build": "node-gyp rebuild",
    "build-ts": "tsc",
    "rebuild": "node-gyp rebuild",
    "install": "prebuild-install || node-gyp rebuild",
    "prebuild-node": "prebuild -t 14.17.0 16.9.1 --strip",
    "prebuild-node-ia32": "prebuild -t 14.17.0 16.9.1 -a ia32 --strip",
    "prebuild-electron": "prebuild -t 14.0.0 16.0.0 -r electron --strip",
    "prebuild-electron-ia32": "prebuild -t 14.0.0 16.0.0 -r electron -a ia32 --strip",
    "prebuild-release": "npm run prebuild-electron",
    "prepublishOnly": "npm run build-ts && npm run readme"
  },
  "author": "Maximilien DERRIER <max.derrier@lelivrescolaire.fr>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/chai": "4.2.11",
    "@types/mocha": "8.0.0",
    "@types/mz": "2.7.1",
    "@types/sinon": "9.0.4",
    "chai": "^4.2.0",
    "eslint": "7.4.0",
    "jsdoc-to-markdown": "6.0.1",
    "mocha": "8.0.1",
    "node-abi": "3.0.0",
    "node-gyp": "^8.1.0",
    "prebuild": "10.0.1",
    "sinon": "9.0.2",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "debug": "^4.1.1",
    "node-addon-api": "^4.0.0",
    "prebuild-install": "6.1.4"
  }
}
